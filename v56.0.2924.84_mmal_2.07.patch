+  FrameStash()
+  {
+  }
+  virtual ~FrameStash()
+  {
+    empty_frames();
+  }
+
+  void free_frame(FrameDesc * const frame)
+  {
+    if (frame->size() != size_) {
+      delete frame;
+    }
+    else {
+      frames_.push(frame);
+    }
+  }
+
+  FrameDesc * alloc_frame(const size_t size)
+  {
+    if (size != size_) {
+      empty_frames();
+    }
+    size_ = size;
+
+    FrameDesc * const frame = (size == 0) ? nullptr :
+      frames_.empty() ? new FrameDesc(size) : frame_pop();
+
+    return frame;
+  }
