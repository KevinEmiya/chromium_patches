+void *
+SharedImageX11::memory() const
+{
+  void * v = shm_->memory();
+  if (v != nullptr)
+    return v;
+  if (buffer_size_ == 0)
+  {
+    LOG(ERROR) << __func__ << ": No buffer size";
+    return nullptr;
+  }
+  if (!shm_->Map(buffer_size_))
+  {
+    LOG(ERROR) << __func__ << ": Map failed: size=" << buffer_size_;
+    return nullptr;
+  }
+  return shm_->memory();
+}
