+class FrameStash
+{
+  size_t size_;
+  std::stack<FrameDesc *> frames_;
+
+  FrameDesc * frame_pop()
+  {
+    FrameDesc * const frame = frames_.top();
+    frames_.pop();
+    return frame;
+  }
+
+  void empty_frames()
+  {
+    while (!frames_.empty()) {
+      delete frame_pop();
+    }
+  }
+
